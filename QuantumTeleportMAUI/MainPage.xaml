<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="QuantumTeleportMAUI.Views.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             Title="Quantum Teleporter">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Label Text="quantum teleport sim" 
                   FontSize="Title" HorizontalOptions="Center" />

            <Label Text="theta (polar):" />
            <Slider x:Name="thetaControl" Minimum="0" Maximum="3.14" Value="1.047" />
            <Label x:Name="thetaLabel" Text="theta: 1.047 (60°)" />

            <Label Text="phi (azimuth):" />
            <Slider x:Name="phiControl" Minimum="0" Maximum="6.28" Value="0.785" />
            <Label x:Name="phiLabel" Text="phi: 0.785 (45°)" />

            <Label Text="shots:" />
            <Slider x:Name="shotsControl" Minimum="100" Maximum="5000" Value="1000" />
            <Label x:Name="shotsLabel" Text="shots: 1000" />

            <Label Text="noise prob:" />
            <Slider x:Name="noiseControl" Minimum="0" Maximum="0.1" Value="0" />
            <Label x:Name="noiseLabel" Text="noise: 0%" />

            <CheckBox x:Name="ecCheck" />
            <Label Text="use error correction?" />

            <Button Text="fire teleport!" Clicked="RunSim" BackgroundColor="LightBlue" />

            <skia:SKCanvasView x:Name="blochView" PaintSurface="DrawBloch" HeightRequest="250" WidthRequest="250" />

            <Label x:Name="statusText" Text="ready to teleport..." FontAttributes="Bold" />

            <charts:CartesianChart x:Name="successChart" HeightRequest="150" />

            <HorizontalStackLayout>
                <Button Text="export csv" Clicked="ExportHistory" />
                <Button Text="clear log" Clicked="ClearLog" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
